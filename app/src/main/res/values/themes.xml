<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyKamchatka" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/background_color_light</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyKamchatka" parent="Base.Theme.MyKamchatka" />

    <style name="btn_style">
        <item name="android:fontFamily">@font/pangolin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_transparent_style">
        <item name="android:fontFamily">@font/pangolin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="onboarding_title_style">
        <item name="color">@color/black</item>
        <item name="android:fontFamily">@font/pangolin</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="onboarding_signature_style">
        <item name="android:fontFamily">@font/pangolin</item>
        <item name="android:textSize">16sp</item>
        <item name="color">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="til_style" parent="TextAppearance.AppCompat">
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxStrokeColor">@color/text_input_color</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">45dp</item>
    </style>

    <style name="heading_text_top">
        <item name="android:fontFamily">@font/pangolin</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="title_text_default">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pangolin</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="text_all">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pangolin</item>
        <item name="android:textSize">20sp</item>
    </style>




</resources>